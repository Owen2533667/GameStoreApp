@model VoiceActor

@{
    ViewData["Title"] = "Delete Voice Actor";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Delete confirmation of @Model.FullName</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2" id="create-form-voice-actor">
                <div class="form-group text-center">
                    <img class="border-info rounded-circle" id="PicturePreview" />
                </div>
                <div class="form-group">
                    <label asp-for="PictureURL" class="control-label"></label>
                    <input asp-for="PictureURL" class="form-control" readonly/>
                    <span asp-validation-for="PictureURL" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="FullName" class="control-label"></label>
                    <input asp-for="FullName" class="form-control" readonly/>
                    <span asp-validation-for="FullName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Bio" class="control-label"></label>
                    <input asp-for="Bio" class="form-control" readonly/>
                    <span asp-validation-for="Bio" class="text-danger"></span>
                </div>
                <div class="form-group" style="padding-top: 2.5rem;">
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <input type="submit" value="Confirm" class="btn btn-danger float-sm-end" />
                    </form>
                    <a class="btn btn-outline-secondary" asp-action="Index"><i class="bi bi-caret-left-fill"></i> Back</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        if ($('#create-form-voice-actor')) {
            $(document).ready(function () {
                var output = document.getElementById('PicturePreview');
                output.src = $('#PictureURL').val();
            })
        }
    </script>
}