@model Platform

@{
    ViewData["Title"] = "Delete Platform";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Delete confirmation of @Model.Name</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2" id="create-form-voice-actor">
                <div class="form-group text-center">
                    <img class="border-info rounded-circle" id="PicturePreview" />
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Name" class="control-label"></label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="ReleaseDate" class="control-label"></label>
                            <input asp-for="ReleaseDate" type="date" class="form-control" />
                            <span asp-validation-for="ReleaseDate" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="ImageURL" class="control-label"></label>
                            <input asp-for="ImageURL" class="form-control" />
                            <span asp-validation-for="ImageURL" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">

                            <label asp-for="PlatformDeveloper" class="control-label"></label>
                            <input asp-for="PlatformDeveloper" class="form-control" />
                            <span asp-validation-for="PlatformDeveloper" class="text-danger"></span>

                        </div>
                        <div class="form-group">
                            <label asp-for="Price" class="control-label"></label>
                            <input asp-for="Price" type="number" min="0.00" max="10000.00" step="0.01" class="form-control" />
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="form-group">
                            <label asp-for="Description" class="control-label"></label>
                            <textarea asp-for="Description" class="form-control"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="form-group" style="padding-top: 2.5rem;">
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <input type="submit" value="Confirm" class="btn btn-danger float-sm-end" />
                    </form>
                    <a class="btn btn-outline-secondary" asp-action="Index"><i class="bi bi-caret-left-fill"></i> Back</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        if ($('#create-form-platform')) {
            $(document).ready(function () {
                var output = document.getElementById('PicturePreview');
                output.src = $('#ImageURL').val();
            })
        }
    </script>
}