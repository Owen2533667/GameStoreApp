@model IEnumerable<Game>

@{
    ViewData["Title"] = "List of Games";
}


<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4 col-xs-6 border-primary mb-3">
            <div class="card mb-3" style="max-width: 540px;">
                <div class="row g-0">
                    <div class="col-md-12">
                        <div class="card-header text-white bg-info">
                            <p class="card-text">
                                <h5 class="card-title">
                                    @item.Name
                                    <a class="text-white float-sm-end"><i class="bi bi-pencil-square"></i></a>
                                </h5>
                            </p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <img src="@item.ImageURL" style="width: 100%; height: 280px" alt="@item.Name">
                    </div>
                    <div class="col-md-6">
                        <div class="card-body">
                            @*<p class="card-text">@item.Description</p>*@
                            <p class="card-text"><b>Publisher: </b> @item.GamePublisher.Name</p>
                            <p class="card-text"><b>Developer: </b> @item.GameDeveloper.Name</p>
                            <p class="card-text"><b>Release Date: </b> @item.ReleaseDate.ToString("dd MMM yyyy")</p>
                            <p class="card-text">
                                <b>Status:</b>
                                @if (DateTime.Now >= item.ReleaseDate)
                                {
                                    <span class="badge bg-success text-white">RELEASED</span>
                                } else
                                {
                                    <span class="badge bg-primary text-white">PRE-ORDER</span>
                                }
                            </p>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="card-footer">
                            <a class="btn btn-outline-primary float-sm-end"><i class="bi bi-eye-fill"></i> Show Detail</a>
                            <a class="btn btn-success text-white"><i class="bi bi-cart-plus"></i> Add to Cart (Price @item.Price.ToString("c"))</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>