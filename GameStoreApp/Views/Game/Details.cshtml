@model Game

@{
    ViewData["Title"] = "Games Detials";
}


<div class="row">
    <div class="col-md-8 offset-2">
        <div class="card mb-3" >
            <div class="row g-0">
                <div class="col-md-12">
                    <div class="card-header text-white bg-info">
                        <p class="card-text">
                            <h5 class="card-title">
                                @Model.Name
                            </h5>
                        </p>
                    </div>
                </div>
                <div class="col-md-4">
                    <img src="@Model.ImageURL" alt="@Model.Name">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <p class="card-text">@Model.Description</p>
                        <p class="card-text">
                            <b>Publisher: </b>
                            <a asp-controller="GamePublisher" asp-action="Details" asp-route-id="@Model.GamePublisherId">@Model.GamePublisher.Name</a>
                        </p>
                        <p class="card-text">
                            <b>Developer: </b>
                            <a asp-controller="GameDeveloper" asp-action="Details" asp-route-id="@Model.GameDeveloperId">@Model.GameDeveloper.Name</a>
                        </p>
                        <p class="card-text"><b>Release Date: </b> @Model.ReleaseDate.ToString("dd MMM yyyy")</p>
                        <p class="card-text">
                            <b>Status:</b>
                            @if (DateTime.Now >= Model.ReleaseDate)
                            {
                                <span class="badge bg-success text-white">RELEASED</span>
                            }
                            else
                            {
                                <span class="badge bg-primary text-white">PRE-ORDER</span>
                            }
                        </p>
                        <p class="card-text">
                            <b>Voice Actors: </b>
                            <hr/>
                            <div class="row">
                                @foreach (var voiceActor in Model.VoiceActors_Games)
                                {
                                    <div class="column text-center" style="max-width:160px;">
                                        <img src="@voiceActor.VoiceActor.PictureURL" class="boarder-info rounded-circle VoiceActorImages" />
                                        <br />
                                        <a asp-controller="VoiceActor" asp-action="Details" asp-route-id="@voiceActor.VoiceActorId">@voiceActor.VoiceActor.FullName</a>
                                   </div>
                                }
                            </div>
                        </p>
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="card-footer">
                        <a class="btn btn-outline-primary float-sm-end" asp-action="Index"><i class="bi bi-caret-left-fill"></i> Back</a>
                        <a class="btn btn-success text-white" asp-controller="Orders" asp-action="AddToShoppingCart" asp-route-id="@Model.Id"><i class="bi bi-cart-plus"></i> Add to Cart (@Model.Price.ToString("c"))</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>